      <DescriptionItem
        description={i18n.LEGAL_NOTICE.TERMS_OF_USE.DESCRIPTION_1}
      />
      <DescriptionItem
        description={i18n.LEGAL_NOTICE.TERMS_OF_USE.DESCRIPTION_2}
      />
      <DescriptionItem
        description={i18n.LEGAL_NOTICE.TERMS_OF_USE.DESCRIPTION_3}
      />

      <!-- Use of website and resposibility -->
      <SubtitleItem
        subtitle={i18n.LEGAL_NOTICE.USE_OF_WEBSITE_AND_RESPONSIBILITY.TITLE}
      />
      <DescriptionItem
        description={i18n.LEGAL_NOTICE.USE_OF_WEBSITE_AND_RESPONSIBILITY
          .DESCRIPTION_1}
      />
      <DescriptionItem
        description={i18n.LEGAL_NOTICE.USE_OF_WEBSITE_AND_RESPONSIBILITY
          .DESCRIPTION_2}
      />
